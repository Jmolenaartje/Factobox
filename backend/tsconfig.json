{
  "compilerOptions": {
    "target": "es2016",                                  // Set the JavaScript language version for emitted JavaScript
    "module": "commonjs",                                // Specify what module code is generated
    "strict": true,                                      // Enable all strict type-checking options
    "esModuleInterop": true,                             // Enable emit interoperability between CommonJS and ES Modules
    "skipLibCheck": true,                                // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true,           // Ensure that casing is correct in imports
    "outDir": "./dist",                                  // Specify an output folder for all emitted files
    "rootDir": "./src",                                  // Specify the root folder within your source files
    "types": ["node", "express"]                         // Include types for Node.js and Express
  },
  "include": ["src/**/*"],                               // Include all files in the src directory
  "exclude": ["node_modules"]                           // Exclude node_modules
}